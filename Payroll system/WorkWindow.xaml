<Window x:Class="Payroll_system.WorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:models="clr-namespace:Payroll_system.Models"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        
        mc:Ignorable="d"
        Title="WorkWindow" Height="380" Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ObjectDataProvider x:Key="WorkTypesSource" 
                            MethodName="GetValues" 
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:WorkType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Тип работы:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <ComboBox Name="cbType" Grid.Row="0" Grid.Column="1" Margin="5"
                  
                  ItemsSource="{Binding Source={StaticResource WorkTypesSource}}"/>

        <TextBlock Text="Описание:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="txtDescription" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Ставка (руб./час):" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox Name="txtRate" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <GroupBox Header="Стратегия расчета" Grid.Row="4" Grid.ColumnSpan="2" Margin="5">
            <StackPanel>
                <RadioButton Name="rbHourly" Content="Почасовая (без надбавок)" Margin="5" IsChecked="True"/>

                <RadioButton Name="rbBonus" Content="С процентной надбавкой" Margin="5"/>

                <StackPanel Orientation="Horizontal" Margin="25,5,5,5">
                    <TextBlock Text="Процент надбавки (%):" VerticalAlignment="Center" Width="150"/>
                    <TextBox Name="txtBonusPercent" Width="100" Text="0.00"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <Button Content="Сохранить" Grid.Row="6" Grid.ColumnSpan="2" Margin="5" 
                Click="SaveBtn_Click" Height="30"/>

    </Grid>
</Window>
<Window x:Class="Payroll_system.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Данные о сотруднике" Height="250" Width="350" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15">

        <TextBlock Text="Фамилия:" Margin="0,5,0,0"/>
        <TextBox Name="txtLastName" Margin="0,5" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Имя:" Margin="0,5,0,0"/>
        <TextBox Name="txtFirstName" Margin="0,5" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Должность:" Margin="0,5,0,0"/>
        <TextBox Name="txtPosition" Margin="0,5" Text="{Binding Position, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Name="btnSave" Content="Сохранить" Click="BtnSave_Click" Margin="0,15"/>
    </StackPanel>
</Window>
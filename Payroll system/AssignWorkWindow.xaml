<Window x:Class="Payroll_system.AssignWorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Назначить работу сотруднику" Height="280" Width="350" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="15">
        <TextBlock Name="txtEmployeeName" Text="Назначение для:" FontWeight="Bold" FontSize="14"/>

        <TextBlock Text="Выберите вид работы:" Margin="0,10,0,0"/>
        <ComboBox Name="cbWorkItem" Margin="0,5" DisplayMemberPath="Description"/>

        <TextBlock Text="Количество часов:" Margin="0,10,0,0"/>
        <TextBox Name="txtHours" Margin="0,5"/>

        <Button Content="Назначить" Click="Assign_Click" Margin="0,15"/>
    </StackPanel>
</Window>